<article>
  <h4>Pending friendship requests</h4>
  <ul>
  <% friendship_requests.each do |request| %>
    <li> <%= link_to request.friend.name, user_path(request.friend) %></li>
  <% end %>
  </ul>
  <hr/>
</article>

<h3>New Post</h3>
<%= form_for(@post) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <%= display_errors(@post) %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <h3>
    Recent posts
  </h3>
  <ul class="posts">
    <%= render @timeline_posts %>
  </ul>
</article>
